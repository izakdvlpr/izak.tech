{
  "include": [
    "next-env.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.js"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "lib": [
      "ES6",
      "DOM",
      "ES2016",
      "ES2020",
      "ESNext"
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ]
    },
    "incremental": true
  }
}
